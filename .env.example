# ===== Django 기본 설정 =====
# 프로덕션에서는 반드시 강력한 SECRET_KEY를 생성하세요
# 생성 방법: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here

# 개발 환경에서만 True, 프로덕션에서는 반드시 False
DEBUG=False

# 허용할 호스트 (쉼표로 구분, 공백 없이)
# 예: DJANGO_ALLOWED_HOSTS=techchang.com,www.techchang.com,43.203.93.244
DJANGO_ALLOWED_HOSTS=techchang.com,www.techchang.com

# ===== API 키 설정 =====
# OpenAI API 키 (AI 기능 사용 시)
OPENAI_API_KEY=your-openai-api-key-here

# 카카오 로그인 API 설정
# 발급: https://developers.kakao.com/
KAKAO_REST_API_KEY=your-kakao-rest-api-key-here
KAKAO_CLIENT_SECRET=your-kakao-client-secret-here

# 국립국어원 한국어기초사전 API 키 (끝말잇기 게임용, 선택사항)
# 발급: https://krdict.korean.go.kr/openApi/openApiRegister
KOREAN_DICT_API_KEY=your-korean-dict-api-key-here

# ===== 게임 설정 =====
WORDCHAIN_TIMEOUT=30
WORDCHAIN_USE_DICTIONARY_API=True

# ===== 보안 미들웨어 설정 =====
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW=3600
DDOS_THRESHOLD=120
BLOCK_DURATION=180
SUSPICION_SCORE_THRESHOLD=20
PROTECTED_PATH_ATTEMPTS_LIMIT=50

# ===== 이메일 설정 (선택사항) =====
