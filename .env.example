# OpenAI API 키
OPENAI_API_KEY=sk-your-actual-api-key-here

# 카카오 로그인 API 설정 (카카오 개발자 콘솔에서 발급)
# https://developers.kakao.com/ 에서 애플리케이션 생성 후 발급받으세요
KAKAO_REST_API_KEY=your-kakao-rest-api-key-here
KAKAO_CLIENT_SECRET=your-kakao-client-secret-here

# 끝말잇기 게임 설정
WORDCHAIN_TIMEOUT=30  # 초 단위 (30초)
WORDCHAIN_USE_DICTIONARY_API=True  # 사전 API 사용 여부

# 국립국어원 한국어기초사전 API 키 (선택사항)
# 발급 방법: https://krdict.korean.go.kr/openApi/openApiRegister 에서 회원가입 후 신청
# API 문서: https://krdict.korean.go.kr/openApi/openApiInfo
# 키 형식: 16진수 32자리 (예: 1234567890ABCDEF1234567890ABCDEF)
# 미설정 시 기본 검증만 수행 (한글, 길이, 금지어 체크만)
KOREAN_DICT_API_KEY=

# 개발/프로덕션 환경 구분
DEBUG=True

# 데이터베이스 설정 (필요시)
# DATABASE_URL=sqlite:///db.sqlite3

# 보안 키 (프로덕션에서는 랜덤 생성)
# SECRET_KEY=your-secret-key-here

# 보안 미들웨어 설정
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW=3600
DDOS_THRESHOLD=120
BLOCK_DURATION=180
